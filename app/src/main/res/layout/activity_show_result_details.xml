<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".show_result_details_Activity">

    <TextView
        android:id="@+id/txt_semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="semester"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#642121"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/rtxt_student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/rtxt_student_roll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/rtxt_student_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/rtxt_student_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/rtxt_student_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/rtxt_student_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/rtxt_student_cgpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/met_btn_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/a">

                    <TextView
                        android:id="@+id/txt_sub_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_sub_result_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/b">

                    <TextView
                        android:id="@+id/txt_sub_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_sub_result_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/a">

                    <TextView
                        android:id="@+id/txt_sub_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_sub_result_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/b">

                    <TextView
                        android:id="@+id/txt_sub_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_sub_result_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/a">

                    <TextView
                        android:id="@+id/txt_sub_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_sub_result_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/b">

                    <TextView
                        android:id="@+id/txt_sub_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_sub_result_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TextView"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="@color/a">

                    <TextView
                        android:id="@+id/txt_sub_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_sub_result_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>