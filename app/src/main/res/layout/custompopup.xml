<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/met_btn_3"
    android:padding="5dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:background="@drawable/met_btn_2"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Semester"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_1_semester"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#3d1515"
                android:background="@drawable/met_btn_4"
                android:textAllCaps="false"
                android:text="First Semester"/>

            <Button
                android:id="@+id/btn_2_semester"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Second Semester"
                android:textColor="#3d1515"
                android:background="@drawable/met_btn_4"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Third Semester"
                android:textColor="#3d1515"
                android:background="@drawable/met_btn_4"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Fourth Semester"
                android:textColor="#3d1515"
                android:background="@drawable/met_btn_4"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Fifth Semester"
                android:textColor="#3d1515"
                android:background="@drawable/met_btn_4"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sixth Semester"
                android:textColor="#3d1515"
                android:background="@drawable/met_btn_4"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Seventh Semester"
                android:textColor="#3d1515"
                android:background="@drawable/met_btn_4"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Eight Semester"
                android:textColor="#3d1515"
                android:background="@drawable/met_btn_4"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                />


        </LinearLayout>


    </ScrollView>


</LinearLayout>