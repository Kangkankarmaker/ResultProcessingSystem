<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_sr"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:textColor="#11612a"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="30sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Student Name"
                    android:textColor="#286493"
                    android:layout_marginLeft="9dp"
                    />
                <EditText
                    android:id="@+id/ext_ed_stu_name"
                    android:textSize="19sp"
                    android:inputType="textPersonName"
                    android:textColor="#286493"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Student Roll"
                    android:textColor="#286493"
                    android:layout_marginLeft="9dp"
                    />

                <EditText
                    android:id="@+id/ext_ed_stu_roll"
                    android:textSize="19sp"
                    android:textColor="#135869"
                    android:inputType="number"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="#fff">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Student Reg."
                    android:textColor="#286493"
                    android:layout_marginLeft="9dp"
                    />
                <EditText
                    android:id="@+id/ext_ed_stu_reg"
                    android:textSize="19sp"
                    android:textColor="#484de7"
                    android:inputType="number"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Student Dept."
                    android:textColor="#286493"
                    android:layout_marginLeft="9dp"
                    />

                <EditText
                    android:id="@+id/ext_ed_stu_dept"
                    android:textSize="19sp"
                    android:inputType="text"
                    android:textColor="#484de7"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Student sec."
                    android:inputType="number"
                    android:textColor="#286493"
                    android:layout_marginLeft="9dp"
                    />

                <EditText
                    android:id="@+id/ext_ed_stu_sec"
                    android:textSize="19sp"
                    android:inputType="number"
                    android:textColor="#135869"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Student Gander"
                    android:textColor="#286493"
                    android:layout_marginLeft="9dp"
                    />
                <EditText
                    android:id="@+id/ext_ed_stu_gender"
                    android:textSize="19sp"
                    android:textColor="#0d0c0c"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>





            <Button
                android:id="@+id/btn_update"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:text="Change Information"
                android:textColor="#ffffff"
                android:background="@drawable/met_btn_3"
                android:layout_marginTop="20dp"
                android:layout_width="180dp"
                android:layout_height="50dp" />

        </LinearLayout>


    </ScrollView>






</LinearLayout>